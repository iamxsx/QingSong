<% provide :title, '青松 - 注册成功' %>
<%

  #姓名
  @result_name = @user.username
  #邮箱
  @result_email = @user.email
  #公司名称
  @result_companyname = @user.company.company_name

%>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="pagetitle">注册成功!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <div class="withicon_panelcontainer center">
        <div class="panel_icon"><span class="fa fa-check"></span></div>
        <h2 class="su_username"><%= @result_name %></h2>
        <h3 class="su_email"><%= @result_email %></h3>
        <div class="panel_hr"></div>
        <p class="su_tips">根据您的邀请码,您将被自动分配到以下公司名下</p>
        <h2 class="su_company_name"><%= @result_companyname %></h2>

        <a href="/login" class="btn-ghost-green btn-login">去登录</a>
      </div>
    </div>



  </div>
</div>