<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company id</th>
      <th>Company name</th>
      <th>Company desc</th>
      <th>Company logo</th>
      <th>Activated</th>
      <th>Activated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.company_name %></td>
        <td><%= company.company_desc %></td>
        <td><%= image_tag(company.company_logo,width: 100) %></td>
        <td><%= company.activated %></td>
        <td><%= company.activated_at %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

