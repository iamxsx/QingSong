<p id="notice"><%= notice %></p>

<h1>Invitation Codes</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Used</th>
      <th>Invited at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitation_codes.each do |invitation_code| %>
      <tr>
        <td><%= invitation_code.code %></td>
        <td><%= invitation_code.used %></td>
        <td><%= invitation_code.invited_at %></td>
        <td><%= link_to 'Show', invitation_code %></td>
        <td><%= link_to 'Edit', edit_invitation_code_path(invitation_code) %></td>
        <td><%= link_to 'Destroy', invitation_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form', invitation_code: @invitation_code %>
