<p id="notice"><%= notice %></p>
<div class="fourteen wide column">
  <h1>新入驻公司列表</h1>
  <table class="ui basic table">
    <thead>
    <tr>
      <th>公司编号</th>
      <th>公司名称</th>
      <th>公司简介</th>
      <th>公司地址</th>
      <th>联系方式</th>
      <th colspan="3">操作</th>
    </tr>
    </thead>
    <tbody>
    <% @companies.each do |company| %>
        <tr>
          <td><%= company.id %></td>
          <td><%= company.company_name %></td>
          <td title="<%= company.company_desc %>"><%= company.company_desc[0, 30] if company.company_desc %></td>
          <td><%= company.company_address %></td>
          <td><%= company.company_tel %></td>
          <td><%= link_to '详情', "/admin/companies/" %></td>
          <td><%= link_to '审核通过', "/admin/company/active/#{company.id}" %></td>
          <td><%= link_to '审核驳回', '' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br/>
  <h1>新增课程申请列表</h1>
  <table class="ui basic table">
    <thead>
    <tr>
      <th>申请编号</th>
      <th>课程系统名</th>
      <th>课程系统详情</th>
      <th>课程系统封面</th>
      <th colspan="3">操作</th>
    </tr>
    </thead>
    <tbody>
    <% @apply_lessons.each do |apply_lesson| %>
        <tr>
          <td><%= apply_lesson.id %></td>
          <td><%= apply_lesson.course_sys_name_cn %></td>
          <td><%= apply_lesson.course_sys_desc %></td>
          <td>
            <%= image_tag(apply_lesson.course_sys_cover, width: 80) %>
          </td>
          <td><%= link_to '接受申请', '' %></td>
          <td><%= link_to '驳回申请', '' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>