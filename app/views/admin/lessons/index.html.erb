<div class="ui internally celled grid">
  <div class="row">
    <div class="three wide column">
      <img src="<%= image_url('logo.png') %>">
    </div>
    <div class="eight wide column">
      <div class="ui form">
        <div class="field">
          <label>课程名</label>
          <input type="text">
        </div>
        <div class="field">
          <label>课程简介</label>
          <textarea rows="2"></textarea>
        </div>
        <div class="field">
          <label>选择发布课程的公司</label>
          <div class="ui selection dropdown">
            <input type="hidden" name="gender">
            <i class="dropdown icon"></i>
            <div class="default text">公司</div>
            <div class="menu">
              <div class="item" data-value="3">公司1</div>
              <div class="item" data-value="2">公司2</div>
              <div class="item" data-value="1">公司3</div>
              <div class="item" data-value="0">公司4</div>
            </div>
          </div>
        </div>
        <div class="field">
          <label>课程封面图片</label>
          <input type="file" style="border: none">
        </div>
        <div class="field">
          <label>课程html页面</label>
          <input type="file" style="border: none">
        </div>
        <div class="field">
          <label>课程css文件</label>
          <input type="file" style="border: none">
        </div>
        <div class="field">
          <label>课程js文件</label>
          <input type="file" style="border: none">
        </div>
        <div class="field">
          <label>课程json文件</label>
          <input type="file" style="border: none">
        </div>
        <button class="fluid ui blue  button">确认发布</button>
      </div>
    </div>
    <div class="three wide column">
      <img src="<%= image_url('logo.png') %>">
    </div>
  </div>
</div>