<div class="ui grid">
  <div class="row">
    <div class="one wide column"></div>
    <div class="fourteen wide column">
      <h1>Lessons</h1>
      <table class="ui basic table">
        <thead>
        <tr>
          <th>课程名</th>
          <th>课程简介</th>
          <th>课程封面</th>
          <th>课程文件</th>
          <th>所属公司</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.lesson_name %></td>
              <td><%= lesson.lesson_desc %></td>
              <td><%= image_tag(lesson.lesson_cover,width: 40) %></td>
              <td><%= link_to '点击下载',"#{lesson.lesson_file_url}" %></td>
              <td><%= lesson.company.company_name %></td>
              <td><%= link_to 'Show', lesson %></td>
              <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
              <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
        <tfoot class="full-width">
          <tr>
            <th></th>
            <th colspan="16">
              <%= link_to 'sd',href: '/admin/lessons/new' do %>
                  <div class="ui right floated small primary labeled icon button">
                    <i class="upload icon"></i> 添加新课程
                  </div>
              <% end %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>

