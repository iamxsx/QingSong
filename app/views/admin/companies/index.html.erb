<p id="notice"><%= notice %></p>

<div class="ui container">
  <div class="row">
    <div class="eight grid column">
      <h1>Companies</h1>
      <table>
        <thead>
        <tr>
          <th>Company id</th>
          <th>Company name</th>
          <th>Company desc</th>
          <th>Company logo</th>
          <th>Activated</th>
          <th>Activated at</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @companies.each do |company| %>
            <tr>
              <td><%= company.id %></td>
              <td><%= company.company_name %></td>
              <td><%= company.company_desc %></td>
              <td><%= image_tag(company.company_logo, width: 100) %></td>
              <td><%= company.activated %></td>
              <td><%= company.activated_at %></td>
              <td><%= link_to "Show", {controller: "admin/companies", action: "show", id: company} %></td>
              <td><%= link_to 'Edit', edit_admin_company_path(company) %></td>
              <td><%= link_to 'Destroy',{ controller: "admin/companies",action: "destroy",id: company}, data: {method: :delete,confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Company', new_admin_company_path %>
    </div>
  </div>
</div>

