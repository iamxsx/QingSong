<div class="ui grid">
  <div class="row">
    <div class="two wide column"></div>
    <div class="ten wide column">
      <h1>Users</h1>
      <table class="ui basic table">
        <thead>
        <tr>
          <th>用户名</th>
          <th>邮箱</th>
          <th colspan="3">操作</th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= link_to '详情', user %></td>
              <td><%= link_to '编辑', edit_user_path(user) %></td>
              <td><%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

