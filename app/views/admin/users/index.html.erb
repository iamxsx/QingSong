<p id="notice"><%= notice %></p>
<div class="fourteen wide column">
  <h1>用户列表</h1>
  <table class="ui basic table">
    <thead>
    <tr>
      <th>用户编号</th>
      <th>用户名</th>
      <th>邮箱</th>
      <th>手机号码</th>
      <th>角色</th>
      <th>所属公司</th>
      <th colspan="3">操作</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.role.role_name %></td>
          <td><%= user.company.company_name %></td>
          <td><%= link_to '详情', "/admin/users/#{user.id}" %></td>
          <td><%= link_to '编辑', edit_admin_user_path(user) %></td>
          <td><%= link_to '删除', "/admin/users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
    <tfoot class="full-width">
      <tr>
        <th></th>
        <th colspan="16">
          <%= link_to '', href: new_admin_user_path do %>
              <div class="ui right floated small primary labeled icon button">
                <i class="upload icon"></i> 添加新用户
              </div>
          <% end %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>