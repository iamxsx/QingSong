<div class="ui form">
  <%= form_for([:admin, @user]) do |f| %>
      <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :username, '用户名' %>
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :password, '密码' %>
        <%= f.text_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, '确认密码' %>
        <%= f.text_field :password_confirmation %>
      </div>

      <div class="field">
        <%= f.label :email, '邮箱' %>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label :phone, '手机号码' %>
        <%= f.text_field :phone %>
      </div>

      <div class="field">
        <%= f.label :role_id, '角色' %>
        <%= f.select :role_id, options_from_collection_for_select(Role.all, :id, :role_name) %>
      </div>

      <div class="field">
        <%= f.label :company_id, '所属公司' %>
        <%= f.select :company_id, options_from_collection_for_select(Company.all, :id, :company_name) %>
      </div>
      <div class="actions">
        <%= f.submit '提交', class: 'ui primary button' %>
      </div>
  <% end %>
</div>


